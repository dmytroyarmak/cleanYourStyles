#!/usr/bin/env node

/**
 * Script that will execute the phantomjs script.
 */

var path = require('path');
var spawn = require('child_process').spawn;

var phantomejsBinPath = path.join(__dirname, '..', 'node_modules', 'phantomjs', 'bin', 'phantomjs');

var args = process.argv.slice(2);
args.unshift(path.join(__dirname, '..', 'lib', 'cleanYourStyles.js'));

var cp = spawn(phantomejsBinPath, args);
cp.stdout.pipe(process.stdout);
cp.stderr.pipe(process.stderr);
process.stdin.pipe(cp.stdin);

cp.on('error', function (err) {
  console.error('Error executing at', phantomejsBinPath);
  console.error(err.stack);
})
cp.on('exit', process.exit);

process.on('SIGTERM', function() {
  cp.kill('SIGTERM');
  process.exit(1);
});
